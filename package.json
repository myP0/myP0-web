{
  "name": "myp0-web",
  "version": "0.0.1",
  "description": "Personal productivity app with data ownership",
  "author": {
    "name": "myP0",
    "email": "dev@myp0.com"
  },
  "homepage": "https://myp0.com",
  "private": true,
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:electron": "tsc --project tsconfig.electron.json --noEmit",
    "build:electron": "tsc --project tsconfig.electron.json",
    "build:all": "npm run build && npm run build:electron",
    "electron:dev": "npm run build:electron && electron .",
    "dist:linux": "npm run build:all && electron-builder --linux",
    "dist:mac": "npm run build:all && electron-builder --mac",
    "dist:win": "npm run build:all && electron-builder --win",
    "dist:all": "npm run build:all && electron-builder --linux --mac --win"
  },
  "build": {
    "appId": "com.myp0.app",
    "productName": "myP0",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist-electron/**/*",
      "build/**/*"
    ],
    "extraMetadata": {
      "main": "dist-electron/main.js"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office",
      "icon": "build-resources/icons"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity",
      "icon": "build-resources/icon.png"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build-resources/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "extraResources": [
      {
        "from": "build",
        "to": "renderer",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.50.2",
    "@sveltejs/vite-plugin-svelte": "^5.1.1",
    "@tailwindcss/typography": "^0.5.19",
    "autoprefixer": "^10.4.19",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "mdsvex": "^0.12.6",
    "postcss": "^8.4.49",
    "svelte": "^5.50.0",
    "svelte-check": "^4.0.0",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.5.0",
    "vite": "^6.4.1"
  }
}
